<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Liste des Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Ajouter Font Awesome pour les icônes -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2e2e2e; /* Fond sombre pour l'harmonie du dashboard */
            color: white;
        }
        .table {
            background-color: #d6d6d6; /* Gris clair pour la table */
            color: black;
        }
        .table th {
            background-color: #32CD32; /* Vert pour les en-têtes */
            color: white;
        }
        .table td {
            background-color: #f8f9fa; /* Fond gris très clair pour les cellules */
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #e2e2e2; /* Gris légèrement plus foncé pour les lignes impaires */
        }
        .btn-custom {
            background-color: #32CD32; /* Vert pour les boutons */
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
        }
        .btn-custom:hover {
            background-color: #228B22; /* Changement de couleur au survol */
        }
        .action-btn {
            font-size: 20px;
            color: #32CD32; /* Vert pour les icônes */
        }
        .action-btn:hover {
            color: #228B22; /* Changement de couleur au survol */
        }
    </style>
</head>
<body>

    <div class="container mt-5">

        <!-- Tableau des données -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID Ticket</th>
                        <th>Manager</th>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (ticketSummaries && ticketSummaries.length > 0) { %>
                        <% ticketSummaries.forEach(ticket => { %>
                            <tr>
                                <td><%= ticket.ticketId %></td>
                                <td><%= ticket.managerUsername %></td>
                                <td><%= ticket.customerName %></td>
                                <td><%= Number(ticket.amount).toFixed(2) %> €</td>
                                <td>
                                    <!-- Remplacer les boutons par des icônes -->
                                    <a href="/ticket/edit/<%= ticket.ticketId %>" class="action-btn">
                                        <i class="fas fa-edit"></i> <!-- Icône Modifier -->
                                    </a>
                                    <a href="/ticket/delete/<%= ticket.ticketId %>" class="action-btn">
                                        <i class="fas fa-trash-alt"></i> <!-- Icône Supprimer -->
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">Aucun ticket trouvé</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <a href="/dashboard/dashboard" class="btn btn-custom mt-3">Retour au Dashboard</a>
        </div>
    </div>

</body>
</html>
