<!-- views/rate.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gestion du Taux</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2a2a2a; /* Gris foncé */
            color: #e0e0e0; /* Gris clair pour le texte */
        }
        .container {
            background-color: #3a3a3a; /* Gris moyen */
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        h1, h3 {
            color: #4CAF50; /* Vert */
        }
        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
        }
        .btn-primary:hover {
            background-color: #45a049;
            border-color: #45a049;
        }
        .form-control {
            background-color: #4a4a4a;
            border: 1px solid #5a5a5a;
            color: #e0e0e0;
        }
        .form-control:focus {
            background-color: #4a4a4a;
            color: #e0e0e0;
            border-color: #4CAF50;
            box-shadow: 0 0 0 0.25rem rgba(76, 175, 80, 0.25);
        }
        .invalid-feedback {
            color: #ff6b6b;
        }
        .text-muted {
            color: #9e9e9e !important;
        }
    </style>
</head>
<body>
    <div class="container mt-5" style="max-width: 600px;">
        <h1 class="text-center mb-4">Gestion du Taux</h1>

        <!-- Formulaire pour ajouter un taux -->
        <form action="/rate/rate" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="rateValue" class="form-label">Nouveau Taux</label>
                <input 
                    type="number" 
                    class="form-control" 
                    id="rateValue" 
                    name="rateValue" 
                    step="0.01" 
                    placeholder="Ex: 12.34" 
                    required
                >
                <div class="invalid-feedback">
                    Veuillez entrer un taux valide
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
        </form>

        <!-- Affichage du dernier taux -->
        <div class="mt-4 text-center">
            <h3>Taux actuel: 
            <% if (lastRate) { %>
                <span class="text-success"><%= Number(lastRate).toFixed(2) %> %</span>
            <% } else { %>
                <span class="text-muted">Aucun taux enregistré</span>
            <% } %> </h3>
        </div>

        <div class="text-center mt-4">
            <a href="/dashboard/dashboard" class="btn btn-primary">Retour au Dashboard</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validation Bootstrap
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>